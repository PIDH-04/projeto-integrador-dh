<!DOCTYPE html>
<html lang="pt-BR">
  <%- include("partials/adminHead", {css: ["baseAdmin.css",
  "adminAddProduto.css"], titulo: "Novo produto | E-móvel"}) %>
  <body class="admin-container">
    <%- include("partials/adminHeader") %>
    <%- include("partials/topoPg") %>
    <main class="">
      <h1>Novo Produto</h1>
      <a href="/admin/produtos" class="retornar-pagina">
        <img src="/img/voltar.svg" />
        Voltar para produtos
      </a>

      <div class="header-produto">
        <h2>Dados do produto</h2>
      </div>

      <form id="novo-produto-form" method="POST" action="/admin/produtos/criar" enctype="multipart/form-data">
        <div class="duas-colunas">
          <div >
            <label for="nome">Nome do Produto</label>
            <input
              type="text"
              name="nome"
              id="nome"
              placeholder="Novo produto"
            />

          <label>Medidas (em cm)</label>
          <div class="medidas-container">
            <div>
              <label>Largura</label>
                <input
                  type="text"
                  name="largura"
                  id="largura"
                  placeholder="90"
                />
            </div>

            <div>
              <label>Comprimento</label>
                <input
                  type="text"
                  name="comprimento"
                  id="comprimento"
                  placeholder="90"
                />
            </div>

            <div>
              <label>Altura</label>
                <input
                  type="text"
                  name="altura"
                  id="altura"
                  placeholder="90"
                />
            </div>

          </div>

            <label for="descricao">Descrição</label>
            <textarea
              name="descricao"
              id="descricao"
              placeholder="Descreva seu produto"
            ></textarea>

            <label for="preco">Preço</label>
            <input
              type="text"
              name="preco"
              id="preco"
              placeholder="200,00"
            />
          </div>

          <div>
            <div class="imagem-container">
              <img src="/img/sem-imagem.svg" id="preview-img" />
            </div>
            <label class="imagem-produto-btn" for="img"
              >Selecionar imagens do produto</label
            >
            <input type="file" name="img" id="img" />
            <label>Selecione a Categoria do produto</label>
            <select name="categoria">
              <option disabled selected>Selecione uma categoria</option>
              <% for(let categoria of categorias){ %>
                <option value="<%= categoria.nome %>">
                  <%= categoria.nome %>
                </option>
              <% } %>
            </select>
            <label>Selecione a Área do produto</label>
            <select name="area">
              <option disabled>Selecione uma área</option>
              <option value="interna" >Área Interna</option>
              <option value="externa" >Área Externa</option>
            </select>
          </div>
        </div>

        <button class="botao-secundario" type="submit">Salvar</button>
      </form>
    </main>
    <script src="/scripts/adminProduto.js"></script>
  </body>
</html>
